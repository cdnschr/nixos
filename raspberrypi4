
    fileSystems = {
      "/" = {
        device = "/dev/disk/by-label/NIXOS_SD";
        fsType = "ext4";
        options = [ "noatime" ];
      };
      #RAMDISK erstellen
      "/mnt/ramdisk" = {
        device = "/mnt/ramdisk";
        fsType = "ramfs";
      };
    };
    #Rechte setzen, damit RAMDISK nicht auf root l√§uft
    systemd.tmpfiles.rules = [
        "d /mnt/ramdisk 1755 bpp users "
        ];
